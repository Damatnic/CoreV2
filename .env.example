# Astral Core Environment Variables
# Copy this file to .env and fill in your values

# Auth0 Configuration
VITE_AUTH0_DOMAIN=your-auth0-domain.auth0.com
VITE_AUTH0_CLIENT_ID=your-auth0-client-id
VITE_AUTH0_CLIENT_SECRET=your-auth0-client-secret
VITE_AUTH0_CALLBACK_URL=http://localhost:5000/callback

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_WEBSOCKET_URL=ws://localhost:3000

# Push Notifications (VAPID Keys)
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key
VITE_VAPID_PRIVATE_KEY=your-vapid-private-key

# Sentry Error Tracking (Optional)
VITE_SENTRY_DSN=your-sentry-dsn

# Feature Flags
VITE_ENABLE_AI_CHAT=true
VITE_ENABLE_VIDEO_CHAT=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true

# Development Settings
VITE_DEBUG_MODE=false
VITE_SHOW_DEV_TOOLS=false

# Crisis Resources
VITE_CRISIS_HOTLINE=988
VITE_CRISIS_TEXT_LINE=741741

# Analytics (Optional)
VITE_GA_TRACKING_ID=your-google-analytics-id

# PWA Configuration
VITE_PWA_NAME=Astral Core - Mental Health Support
VITE_PWA_SHORT_NAME=Astral Core
VITE_PWA_THEME_COLOR=#667eea
VITE_PWA_BACKGROUND_COLOR=#ffffff
VITE_PWA_DESCRIPTION=Anonymous peer-to-peer mental health support platform with offline crisis resources

# Service Worker Configuration
VITE_SW_UPDATE_INTERVAL=60000
VITE_SW_CACHE_NAME=astral-core
VITE_SW_ENABLE_BACKGROUND_SYNC=true
VITE_SW_ENABLE_PUSH_SYNC=true

# PWA Installation
VITE_PWA_DISPLAY=standalone
VITE_PWA_ORIENTATION=portrait
VITE_PWA_START_URL=/
VITE_PWA_SCOPE=/

# Offline Configuration
VITE_OFFLINE_FALLBACK_PAGE=/offline.html
VITE_OFFLINE_CRISIS_PAGE=/offline-crisis.html
VITE_ENABLE_OFFLINE_ANALYTICS=true

# Web App Install Prompts
VITE_ENABLE_INSTALL_PROMPT=true
VITE_INSTALL_PROMPT_DELAY=5000
VITE_INSTALL_PROMPT_FREQUENCY=7

# Share Target Configuration
VITE_ENABLE_SHARE_TARGET=true
VITE_SHARE_TARGET_URL=/share

# Database Configuration (Required for Netlify Functions)
DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# JWT Configuration (Required for Authentication)
JWT_SECRET=your-jwt-secret-here-min-32-chars

# Environment
NODE_ENV=development

# OpenTelemetry Configuration (Optional)
VITE_OTEL_ENABLED=false
VITE_OTEL_ENDPOINT=http://localhost:4318/v1/traces
VITE_OTEL_API_KEY=
VITE_APP_VERSION=1.0.0
